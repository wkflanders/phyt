{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@phyt/database": ["../../packages/database/src"],
      "@phyt/types": ["../../packages/types/src"]
    },
    "composite": true
  },
  "references": [
    { "path": "../../packages/database" },
    { "path": "../../packages/types" }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}