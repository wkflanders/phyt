{
  "$schema": "https://turbo.build/schema.v2.json",
  "globalEnv": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "env": [
        "NEXT_PUBLIC_PRIVY_APP_ID",
        "PRIVY_SECRET_KEY",
        "DATABASE_URL",
        "NEXT_PUBLIC_*",
        "BASE_RPC_URL",
        "EXCHANGE_ADDRESS",
        "PHYT_CARD_ADDRESS",
        "MINT_ADDRESS",
        "EXECUTOR_ADDRESS"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": [
        "NEXT_PUBLIC_PRIVY_APP_ID",
        "PRIVY_SECRET_KEY",
        "DATABASE_URL",
        "NEXT_PUBLIC_*",
        "BASE_RPC_URL",
        "EXCHANGE_ADDRESS",
        "PHYT_CARD_ADDRESS",
        "MINT_ADDRESS",
        "EXECUTOR_ADDRESS"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}